<h1>Burgers!</h1>

<h2>Burgers not eaten</h2>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            {{> burger-block devoured=true }}
        {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that are eaten</h2>

<ul>
    {{#each burgers}}
        {{#if devoured}}
            {{> burger-block devoured=false }}
        {{/if}}
    {{/each}}
</ul>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bg">Burger Name:</label>
    <input type="text" id="bg" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>
