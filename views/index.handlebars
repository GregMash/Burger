<h1><span>Burgers!</span></h1>

<div id="not_consumed">
    <h2>Burgers that are NOT eaten</h2>

    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger-block devoured=true}}
        {{/unless}}
        {{/each}}
    </ul>
</div>

<div id="consumed">
    <h2>Burgers that are eaten</h2>

    <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burger-block devoured=false}}
        {{/if}}
        {{/each}}
    </ul>

</div>

<form class="create-form">
<h2>Add a Burger</h2>
    <div class="form-group">
        <label for="bg">Burger Name:</label>
        <input type="text" id="bg" name="burger_name">
    </div>
    <div class="form-group">
        <input type="radio" name="devoured" value="0" checked> <label>Serve It Up!</label><br>
        <input type="radio" name="devoured" value="1"> <label>Eat It Immediately</label>
    </div>

    <button type="submit">Add Burger</button>
</form>